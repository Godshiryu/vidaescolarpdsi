<p id="notice"><%= notice %></p>

<h1>Listing Progress Themes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Theme</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progress_themes.each do |progress_theme| %>
      <tr>
        <td><%= progress_theme.user %></td>
        <td><%= progress_theme.theme %></td>
        <td><%= progress_theme.status %></td>
        <td><%= link_to 'Show', progress_theme %></td>
        <td><%= link_to 'Edit', edit_progress_theme_path(progress_theme) %></td>
        <td><%= link_to 'Destroy', progress_theme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


	<%= stylesheet_link_tag    'sb-admin', media: 'all', 'data-turbolinks-track' => true %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

	<%= csrf_meta_tags %>


</head>

<body>


<!-- Navigation -->
		<nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #2e7d32;" role="navigation">
